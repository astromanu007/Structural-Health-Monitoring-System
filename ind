    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ESP8266 Temperature & Humidity Dashboard</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; margin-top: 50px; background: #f4f4f4; }
        h1 { color: #333; }
        .data-box { 
            display: inline-block; padding: 20px; 
            border: 1px solid #ddd; border-radius: 10px; 
            margin: 10px; background: white; 
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        }
        .data-value { font-size: 2em; color: #007BFF; font-weight: bold; }
    </style>
</head>
<body>
    <h1>Real-Time Temperature & Humidity</h1>
    <div class="data-box">
        <h2>Temperature</h2>
        <p class="data-value" id="temperature">-- °C</p>
    </div>
    <div class="data-box">
        <h2>Humidity</h2>
        <p class="data-value" id="humidity">-- %</p>
    </div>

    <script>
        const supabaseUrl = "https://pttsmubziutvyitbzwze.supabase.co";
        const apiKey = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InB0dHNtdWJ6aXV0dnlpdGJ6d3plIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDM1Mjc3MDgsImV4cCI6MjA1OTEwMzcwOH0.vQuN_8pLqMtbniztP12SFERlFqCKfbgmVY0fyQP-6lk";
        const tableName = "dht_data";  

        async function fetchData() {
            try {
                const response = await fetch(`${supabaseUrl}/rest/v1/${tableName}?order=id.desc&limit=1`, {
                    headers: {
                        "apikey": apiKey,
                        "Authorization": `Bearer ${apiKey}`,
                        "Content-Type": "application/json"
                    }
                });

                if (!response.ok) throw new Error("Failed to fetch data");

                const data = await response.json();
                if (data.length > 0) {
                    document.getElementById("temperature").textContent = `${data[0].temperature} °C`;
                    document.getElementById("humidity").textContent = `${data[0].humidity} %`;
                }
            } catch (error) {
                console.error("Error fetching data:", error);
                document.getElementById("temperature").textContent = "Error";
                document.getElementById("humidity").textContent = "Error";
            }
        }

        fetchData(); // Fetch on load
        setInterval(fetchData, 2000); // Refresh every 2 seconds
    </script>
</body>
</html>
